<h2>Admin Dashboard</h2>

<%= link_to "Merchants", admin_merchants_path %>
<%= link_to "Invoices", admin_invoices_path %>

<%= content_tag :div, id: "statistics" do %>
  <h2> Top Five Customers </h2>
  <ol>
    <% @top_five_customers.each do |customer| %>
      <li><%= "#{customer.full_name} - transactions: #{customer.transaction_count}" %>
    <% end %>
  </ol>
<% end %>

<section id="top_five_merchants">
  <h2>Top Five Merchants</h2>
  <% @top_five_merchants.each do |merchant| %>
    <ul>
      <li><%= link_to merchant.name, admin_merchant_path(merchant) %> - Total Revenue: <%= merchant.total_revenue %></li>
    </ul>
  <% end %>
</section>

<section id="incomplete_invoices">
  <h2>Incomplete Invoices</h2>
  <% @incomplete_invoices.each do |invoice| %>
    <ul>
      <li><%= link_to invoice.id, admin_invoice_path(invoice) %> - <%= invoice.created_at.strftime("%A, %B %d, %Y") %></li>
    </ul>
  <% end %>
</section>



