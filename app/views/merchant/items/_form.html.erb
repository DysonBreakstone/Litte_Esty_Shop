<%= form_with url: path, method: http_verb, local: true do |form|%>
  <%= form.label :name, "Name" %>
  <%= form.text_field :name, value: item_name %>
  <%= form.label :description, "Description" %>
  <%= form.text_field :description, value: item_description %>
  <%= form.label :unit_price, "Unit Price" %>
  <%= form.text_field :unit_price, value: item_price %>
  <%= form.submit button_name%>
<% end %>